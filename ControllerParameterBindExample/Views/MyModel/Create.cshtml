@model ControllerParameterBindExample.Models.MyModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MyModel</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Property1, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Property1)
                @Html.ValidationMessageFor(model => model.Property1)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Property2, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Property2)
                @Html.ValidationMessageFor(model => model.Property2)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Property3, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Property3)
                @Html.ValidationMessageFor(model => model.Property3)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Property4, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Property4)
                @Html.ValidationMessageFor(model => model.Property4)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Property5, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Property5)
                @Html.ValidationMessageFor(model => model.Property5)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <h3>View Bag Result from binding</h3>
    <ul>
        <li>@ViewBag.Prop1</li>
        <li>@ViewBag.Prop2</li>
        <li>@ViewBag.Prop3</li>
        <li>@ViewBag.Prop4</li>
        <li>@ViewBag.Prop5</li>
    </ul>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
